Functions:
    functions *= Function
;

Function:
  '('
    lines*=Line
  ')'
;

Line:
    Expression ','
;

Expression:
field=Field symbol=Symbol? comparatee=Comparatee? | shellcall=Shell
;

Shell:
NonBlockingShell | BlockingShell
;

NonBlockingShell:
'$(' call=QuotedString ')'
;

BlockingShell:
'$$(' call=QuotedString ')'
;

Field:
'[' name=ID ']'
;

Symbol:
'not' | '!' | '==' | '='
;

Comparatee:
QuotedString | INT
;

QuotedString:
'<' value=STRING '>'
;
